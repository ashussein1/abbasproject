<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.AdminLoginController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox alignment="CENTER" spacing="24"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              styleClass="center-container">

            <VBox spacing="14" maxWidth="420" styleClass="card">
                <children>
                    <Label text="Admin Login" styleClass="title-label"/>
                    <Label text="Sign in to access the hotel management tools."
                           styleClass="subtitle-label"/>

                    <VBox spacing="6">
                        <children>
                            <Label text="Username" styleClass="form-label"/>
                            <TextField fx:id="usernameField"
                                       promptText="Enter username"
                                       styleClass="input-field"/>
                        </children>
                    </VBox>

                    <VBox spacing="6">
                        <children>
                            <Label text="Password" styleClass="form-label"/>
                            <PasswordField fx:id="passwordField"
                                           promptText="Enter password"
                                           styleClass="input-field"/>
                        </children>
                    </VBox>

                    <Label fx:id="errorLabel"
                           text=""
                           styleClass="status-label error"/>

                    <HBox spacing="10">
                        <Button text="Back"
                                onAction="#handleBack"
                                styleClass="secondary-button"
                                prefWidth="155"/>

                        <Button text="Login"
                                onAction="#handleLogin"
                                styleClass="primary-button"
                                maxWidth="Infinity"/>
                    </HBox>
                </children>
                <padding>
                    <Insets top="28" right="36" bottom="28" left="36"/>
                </padding>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
