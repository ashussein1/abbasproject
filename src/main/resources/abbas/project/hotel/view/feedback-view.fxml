<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.FeedbackController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox alignment="CENTER" spacing="24"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              styleClass="center-container">

            <VBox spacing="16" maxWidth="640" styleClass="card">
                <children>
                    <VBox spacing="4">
                        <children>
                            <Label text="Guest Feedback" styleClass="title-label"/>
                            <Label text="Rate your stay at our Hotel!" styleClass="subtitle-label"/>
                        </children>
                    </VBox>

                    <VBox spacing="12">
                        <children>
                            <VBox spacing="6">
                                <children>
                                    <Label text="Rating (1 - 5)" styleClass="form-label"/>
                                    <Spinner fx:id="ratingSpinner"
                                             styleClass="spinner"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Comments" styleClass="form-label"/>
                                    <TextArea fx:id="commentsArea"
                                              promptText="Share any comments about your experience..."
                                              prefRowCount="4"
                                              styleClass="text-area"/>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <Label fx:id="statusLabel"
                           text=""
                           styleClass="status-label"/>

                    <HBox spacing="10">
                        <Button text="Back"
                                onAction="#handleBack"
                                styleClass="secondary-button"
                                prefWidth="170"/>

                        <Button text="Submit Feedback"
                                onAction="#handleSubmit"
                                styleClass="primary-button"
                                maxWidth="Infinity"/>
                    </HBox>
                </children>
                <padding>
                    <Insets top="26" right="32" bottom="26" left="32"/>
                </padding>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
