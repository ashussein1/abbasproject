<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.ManageReservationsController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox spacing="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
              AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <children>
                    <Label text="Manage Reservations" styleClass="title-label"/>
                    <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->

                    <TextField fx:id="searchField" promptText="Search by Guest Name..." styleClass="input-field" prefWidth="250"/>
                    <Button text="Search" onAction="#handleSearch" styleClass="primary-button"/>
                </children>
            </HBox>

            <!-- Table -->
            <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="guestColumn" text="Guest Name" prefWidth="180"/>
                    <TableColumn fx:id="roomColumn" text="Room" prefWidth="120"/>
                    <TableColumn fx:id="datesColumn" text="Dates" prefWidth="200"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                    <TableColumn fx:id="totalColumn" text="Total" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Footer / Actions -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <children>
                    <Button text="Back" onAction="#handleBack" styleClass="secondary-button" prefWidth="120"/>

                    <Label fx:id="statusLabel" styleClass="status-label"/>
                    <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->

                    <Button text="Cancel Selected" onAction="#handleCancelReservation"
                            styleClass="secondary-button" style="-fx-text-fill: #fca5a5;" />
                </children>
            </HBox>

        </VBox>
    </children>
</AnchorPane>