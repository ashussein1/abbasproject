<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.ActivityLogsController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox spacing="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
              AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">

            <Label text="System Reports" styleClass="title-label"/>

            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="tab-pane">

                <!-- TAB 1: Activity Logs -->
                <Tab text="Activity Logs">
                    <VBox spacing="10" style="-fx-padding: 15 0 0 0;">
                        <TableView fx:id="logTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="timeColumn" text="Timestamp" prefWidth="180"/>
                                <TableColumn fx:id="actionColumn" text="Action Type" prefWidth="150"/>
                                <TableColumn fx:id="detailsColumn" text="Details" prefWidth="500"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </Tab>

                <!-- TAB 2: Revenue Reports -->
                <Tab text="Revenue Reports">
                    <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 40;">
                        <Label text="Revenue Summary" styleClass="section-title"/>

                        <HBox spacing="20" alignment="CENTER">
                            <VBox spacing="5" styleClass="metric-card" prefWidth="200">
                                <Label text="Daily Revenue" styleClass="metric-title"/>
                                <Label fx:id="dailyRevenueLabel" text="\$0.00" styleClass="metric-value" style="-fx-text-fill: #4ade80;"/>
                            </VBox>

                            <VBox spacing="5" styleClass="metric-card" prefWidth="200">
                                <Label text="Weekly Revenue" styleClass="metric-title"/>
                                <Label fx:id="weeklyRevenueLabel" text="\$0.00" styleClass="metric-value" style="-fx-text-fill: #4ade80;"/>
                            </VBox>

                            <VBox spacing="5" styleClass="metric-card" prefWidth="200">
                                <Label text="Monthly Revenue" styleClass="metric-title"/>
                                <Label fx:id="monthlyRevenueLabel" text="\$0.00" styleClass="metric-value" style="-fx-text-fill: #4ade80;"/>
                            </VBox>
                        </HBox>

                        <Label text="* Calculates total estimate based on check-in date." styleClass="subtitle-label"/>
                    </VBox>
                </Tab>

            </TabPane>

            <!-- Footer Buttons -->
            <HBox spacing="15">
                <Button text="Back" onAction="#handleBack" styleClass="secondary-button" prefWidth="120"/>
                <HBox HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                <Button text="Export CSV" onAction="#handleExport" styleClass="primary-button" prefWidth="150"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>