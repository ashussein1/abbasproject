<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.KioskController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox alignment="CENTER" spacing="24"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              styleClass="center-container">

            <VBox spacing="16" maxWidth="520" styleClass="card">
                <children>
                    <VBox spacing="4">
                        <children>
                            <Label text="Welcome to Ab's Hotel" styleClass="title-label"/>
                            <Label text="Self-service booking kiosk" styleClass="subtitle-label"/>
                        </children>
                    </VBox>

                    <VBox spacing="10">
                        <children>
                            <VBox spacing="6">
                                <children>
                                    <Label text="Adults" styleClass="form-label"/>
                                    <TextField fx:id="adultsField" promptText="Number of adults" styleClass="input-field"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Children" styleClass="form-label"/>
                                    <TextField fx:id="childrenField" promptText="Number of children" styleClass="input-field"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Check-in" styleClass="form-label"/>
                                    <DatePicker fx:id="checkInPicker" promptText="Select check-in date" styleClass="date-picker input-field"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Check-out" styleClass="form-label"/>
                                    <DatePicker fx:id="checkOutPicker" promptText="Select check-out date" styleClass="date-picker input-field"/>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <Label fx:id="statusLabel" text="" styleClass="status-label"/>

                    <HBox spacing="10">
                        <Button text="Back" onAction="#handleBack" styleClass="secondary-button" prefWidth="120"/>

                        <!-- NEW: Waitlist Button (Initially Hidden or styled differently) -->
                        <Button text="Join Waitlist" onAction="#handleWaitlist" styleClass="secondary-button" prefWidth="150"/>

                        <Button text="Continue" onAction="#handleContinue" styleClass="primary-button" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </children>
                <padding>
                    <Insets top="28" right="32" bottom="28" left="32"/>
                </padding>
            </VBox>
        </VBox>
    </children>
</AnchorPane>