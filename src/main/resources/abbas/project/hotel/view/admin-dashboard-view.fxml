<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.AdminDashboardController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox alignment="CENTER" spacing="24"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              styleClass="center-container">

            <VBox spacing="12" styleClass="card">
                <children>
                    <Label text="Admin Dashboard" styleClass="title-label"/>
                    <Label text="Quick overview of the hotel for Milestone 1."
                           styleClass="subtitle-label"/>

                    <HBox spacing="16">
                        <children>
                            <VBox spacing="4" styleClass="metric-card">
                                <children>
                                    <Label text="Total Rooms" styleClass="metric-title"/>
                                    <Label fx:id="totalRoomsLabel"
                                           text="120"
                                           styleClass="metric-value"/>
                                </children>
                            </VBox>

                            <VBox spacing="4" styleClass="metric-card">
                                <children>
                                    <Label text="Occupied Today" styleClass="metric-title"/>
                                    <Label fx:id="occupiedTodayLabel"
                                           text="78"
                                           styleClass="metric-value"/>
                                </children>
                            </VBox>

                            <VBox spacing="4" styleClass="metric-card">
                                <children>
                                    <Label text="New Feedback" styleClass="metric-title"/>
                                    <Label fx:id="newFeedbackLabel"
                                           text="12"
                                           styleClass="metric-value"/>
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <Label text="This screen will be expanded to show real data such as reservations, rooms and guest feedback."
                           wrapText="true"
                           styleClass="subtitle-label">
                        <padding>
                            <Insets top="10" bottom="12"/>
                        </padding>
                    </Label>

                    <Button text="Back"
                            onAction="#handleClose"
                            styleClass="primary-button"
                            prefWidth="255"/>
                </children>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
