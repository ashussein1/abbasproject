<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:controller="abbas.project.hotel.controller.AdminDashboardController"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../style/dark-theme.css"
            styleClass="dark-root">

    <children>
        <VBox alignment="CENTER" spacing="24"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              styleClass="center-container">

            <!-- Added maxWidth="600" to keep the card from getting too wide -->
            <VBox spacing="20" styleClass="card" minWidth="500" maxWidth="600" alignment="CENTER">
                <children>
                    <!-- Header -->
                    <VBox spacing="4" alignment="CENTER">
                        <Label text="Admin Dashboard" styleClass="title-label"/>
                        <Label text="Hotel Management System" styleClass="subtitle-label"/>
                    </VBox>

                    <!-- Metrics Row -->
                    <HBox spacing="16" alignment="CENTER">
                        <children>
                            <VBox spacing="4" styleClass="metric-card" prefWidth="140">
                                <children>
                                    <Label text="Total Rooms" styleClass="metric-title"/>
                                    <Label fx:id="totalRoomsLabel" text="0" styleClass="metric-value"/>
                                </children>
                            </VBox>

                            <VBox spacing="4" styleClass="metric-card" prefWidth="140">
                                <children>
                                    <Label text="Occupied Today" styleClass="metric-title"/>
                                    <Label fx:id="occupiedTodayLabel" text="0" styleClass="metric-value"/>
                                </children>
                            </VBox>

                            <VBox spacing="4" styleClass="metric-card" prefWidth="140">
                                <children>
                                    <Label text="New Feedback" styleClass="metric-title"/>
                                    <Label fx:id="newFeedbackLabel" text="0" styleClass="metric-value"/>
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <Label text="Management Actions" styleClass="section-title"/>

                    <!-- Action Buttons (Fixed Widths now) -->
                    <VBox spacing="12" alignment="CENTER">
                        <Button text="Manage Reservations"
                                onAction="#handleManageReservations"
                                styleClass="primary-button"
                                prefWidth="320"/>

                        <HBox spacing="10" alignment="CENTER">
                            <Button text="View Feedback"
                                    onAction="#handleFeedback"
                                    styleClass="secondary-button"
                                    prefWidth="175"/>

                            <Button text="Generate Reports"
                                    onAction="#handleReports"
                                    styleClass="secondary-button"
                                    prefWidth="175"/>
                        </HBox>

                        <Button text="Logout"
                                onAction="#handleLogout"
                                styleClass="secondary-button"
                                style="-fx-background-color: #7f1d1d; -fx-text-fill: #fca5a5;"
                                prefWidth="320"/>
                    </VBox>

                </children>
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>
            </VBox>
        </VBox>
    </children>
</AnchorPane>